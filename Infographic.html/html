    <script>
        window.addEventListener('unhandledrejection', (event) => {
            console.error('Unhandled promise rejection:', event.promise, 'reason:', event.reason);
        });

        const processLabels = (labels) => {
            const maxLen = 16;
            return labels.map(label => {
                if (label.length > maxLen) {
                    const words = label.split(' ');
                    const newLabel = [];
                    let line = '';
                    words.forEach(word => {
                        if ((line + word).length > maxLen) {
                            newLabel.push(line.trim());
                            line = '';
                        }
                        line += word + ' ';
                    });
                    newLabel.push(line.trim());
                    return newLabel;
                }
                return label;
            });
        };
        
        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            } else {
                return label;
            }
        };

        const generationMixCtx = document.getElementById('generationMixChart').getContext('2d');
        const generationMixChart = new Chart(generationMixCtx, {
            type: 'doughnut',
            data: {
                labels: processLabels(['PLTA Poso', 'PLTU Batubara Mpanau', 'PLTD Silae']),
                datasets: [{
                    label: 'Bauran Energi',
                    data: [65, 25, 10],
                    backgroundColor: [
                        '#374C80',
                        '#BC5090',
                        '#FFA600'
                    ],
                    borderColor: '#FFFFFF',
                    borderWidth: 3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                             boxWidth: 20
                        }
                    },
                    tooltip: {
                        callbacks: {
                            title: tooltipTitleCallback
                        }
                    }
                },
                cutout: '60%'
            }
        });
    </script>
